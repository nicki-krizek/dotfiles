#!/bin/bash

OUTDIR="${HOME}/Pictures/scan"
TODAY="$(date +%Y-%m-%d)"
NOW="$(date +%H%M%S)"
LABEL="${1:-$NOW}"
OUTPATH="${OUTDIR}/${TODAY}_${LABEL}.jpg"

mkdir -p "${OUTDIR}"

scanimage -d "escl:http://192.168.42.116:443" --mode Color --resolution 300 --format jpeg --output-file "${OUTPATH}"
echo "${OUTPATH}"
